<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FacebookLoginButton">
        <item name="android:text">@string/action_continue_facebook</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:drawableStart">@drawable/com_facebook_button_icon</item>
        <item name="android:background">@drawable/com_facebook_button_background</item>
    </style>

    <style name="GoogleLoginButton">
        <item name="android:text">@string/action_continue_google</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:drawableStart">@drawable/googleg_standard_color_18</item>
        <item name="android:background">@drawable/common_google_signin_btn_icon_light_normal_background</item>
    </style>

    <style name="EmailLoginButton">
        <item name="android:text">@string/action_register_email</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:drawableStart">@drawable/baseline_email_black_18</item>
        <item name="android:background">@drawable/custom_button</item>
    </style>

    <style name="customButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/custom_button</item>
    </style>


    <style name="txtHrefButton">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="buttonSave">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@color/colorSecundary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableStart">@drawable/baseline_check_circle_white_24</item>
        <item name="android:text">@string/txt_save</item>
    </style>

</resources>
